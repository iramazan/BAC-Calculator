<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".ProfileFragment" android:id="@+id/frameLayout">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.33"/>
    <ImageView
            android:src="@drawable/icons8_user_hires"
            android:layout_width="372dp"
            android:layout_height="245dp"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dob_profile" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender_profile" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dob_profile" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <Button
            android:text="My Statistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/primaryFocus"
            android:textColor="#000000"
            android:id="@+id/statistics_profile_button" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <Button
            android:text="See More Favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:textColor="@color/primaryFocus"
            android:id="@+id/favorites_profile_button" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/statistics_profile_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:name="csc420.baccalculator.FavoritesFragment"
            android:id="@+id/fragment"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/favorites_profile_button"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:text="Favorites:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/gender_profile" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
</android.support.constraint.ConstraintLayout>